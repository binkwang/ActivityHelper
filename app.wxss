.container{
  /* display: flex; */

  flex-direction: column;

  align-items: center;

  justify-content: space-around;
  box-sizing: border-box;
  font-family: '微软雅黑';
}


.page-body{
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 1300rpx;
}

.main-label{
  font-size: 12pt;
  display: -webkit-box;   
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;      
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}

.sub-label{
  font-size: 10pt;
  display: -webkit-box;   
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;      
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}

.yellow_bg_button{
  font-size: 10pt;
  font-family: "Times New Roman", Times, serif;

  margin-left: 5pt;
  margin-right: 5pt;
  margin-top: 20pt;
  padding-top: 3pt;
  padding-bottom: 3pt;

  border-radius: 3px;
  background: #FCBD1B;
}


.yellow_border_button{
  font-size: 10pt;
  font-family: "Times New Roman", Times, serif;

  margin-left: 5pt;
  margin-right: 5pt;
  margin-top: 20pt;
  padding-top: 3pt;
  padding-bottom: 3pt;

  border-radius: 3px;
  color: #FCBD1B; /* 文字颜色 */
  background-color:rgba(0, 0, 0, 0); /* 背景透明 */

  border-color: #FCBD1B;
  border-style:solid;
  border-width: thin;
  /* border: thin solid  #FCBD1B; */
}


