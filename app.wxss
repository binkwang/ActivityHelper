.main-label{
  font-size: 10pt;
  font-weight: bold;
  font-family: "Times New Roman", Times, serif;
  color: #000000; /* 文字颜色 */
  margin-left: 5pt;
  margin-right: 5pt;
  margin-top: 0pt;
  margin-bottom: 0pt;
  
  /* padding-top: 15pt; //padding是内边距；margin是外边距
  padding-bottom: 15pt; */

  display: -webkit-box;   
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;      
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  /* background:  rgb(0, 255, 255); */
}

.chevron-image{
  margin-right: 10pt;
  width: 12pt;
  height: 12pt;
  vertical-align: middle;
  margin-left: auto;   /* 使chevron-image右对其 */
  /* background:  rgb(0, 255, 255); */
}

