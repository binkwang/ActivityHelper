.weui-grids {
  position: relative;
  overflow: hidden;
  margin-top: 5px;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 5px;
  width: 20%;
  box-sizing: border-box;
  border-radius: 3px;
}

.activity-type-item-container-view {
  position: relative;
  float: left;
  box-sizing: border-box;
  padding: 5px;
  width: 100%;
  border-radius: 3px;
}

.selected{
  background-color: rgba(252, 189, 27, 0.2);
}
.normal{
  background-color: rgb(51, 51, 51);
}

.weui-grid__bg {
  position: relative;
  float: left;
  padding: 0px 0px;
  width: 100%;
  box-sizing: border-box;
}
 
.weui-grid__icon {
  width: 18px;
  height: 18px;
  margin: 0 auto;
  margin-top: 2px;
}

.weui-grid__icon image {
  display: block;
  width: 100%;
  height: 100%;
}
 
.weui-grid__icon + .weui-grid__label {
  margin-top: 2px;
}
 
.weui-grid__label {
  font-size: 10pt;
  font-weight: normal;
  font-family: "Times New Roman", Times, serif;
  color: rgb(204, 204, 204);
  
  display: block;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}