.selected{
  background-color: red;
}
.normal{
  background-color: #ffffff;
}

.weui-grids {
  position: relative;
  overflow: hidden;
}

.weui-grids:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 0px solid rgba(252, 189, 27, 0.2);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
} 
 
.weui-grids:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 0px solid rgba(252, 189, 27, 0.2);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
} 
 
.weui-grid {
  position: relative;
  float: left;
  padding: 10px;
  width: 20%;
  box-sizing: border-box;
  border-radius: 3px;
}
 
 .weui-grid:before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-right: 0px solid rgba(252, 189, 27, 0.2);
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
} 
 
 .weui-grid:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 0px solid rgba(252, 189, 27, 0.2);
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
} 
 
.weui-grid:active {
  background-color: rgba(252, 189, 27, 0.2)
}  

.weui-grid__bg {
  position: relative;
  float: left;
  padding: 0px 0px;
  width: 100%;
  box-sizing: border-box;
}
 
.weui-grid__icon {
  width: 18px;
  height: 18px;
  margin: 0 auto;
}

.weui-grid__icon image {
  display: block;
  width: 100%;
  height: 100%;
}
 
.weui-grid__icon + .weui-grid__label {
  margin-top: 5px;
}
 
.weui-grid__label {
  font-size: 10pt;
  font-weight: normal;
  font-family: "Times New Roman", Times, serif;
  color: rgb(204, 204, 204);
  
  display: block;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}