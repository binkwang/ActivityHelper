.group-list{
  margin-left: 10pt;
  margin-right: 10pt;
  margin-top: 10pt;
  margin-bottom: 0pt;
  border-radius: 3px;
  background: rgb(51, 51, 51);
}

.layout_horizontal{
  height: auto;
  display: flex; /* flex布局 */
  flex-direction: row; /* row 横向 */
  justify-content: flex-start; /* 设置弹性盒子元素在主轴（横轴）的对齐方式*/
  align-items: center;
}

.group-image{
  margin-top: 10pt;
  margin-bottom: 10pt;
  margin-left: 10pt;
  /* width: 80rpx;
  height: 80rpx; */
  width: 24pt;
  height: 24pt;
  /* background:  rgb(0, 255, 255); */
}

.section-container{
  height: auto;
  border-radius: 3px;
  background-color: rgba(0, 0, 0, 0);

  margin-left: 10pt;
  margin-right: 10pt;
  margin-top: 0pt;
  margin-bottom: 0pt;

  display: flex; 
  flex-direction: row;
  justify-content: space-between; 
  align-items: center;
}

.hits-label{
  margin: 0 auto;
  margin-top: 10pt;
  font-size: 6pt;
  font-weight: normal;
  font-family: "Times New Roman", Times, serif;
  color: #CCCCCC;
}