/* pages/grouplist/grouplist.wxss */



.divider-line{
 background: #EEEDEE;
 width: 100%;
 height: 1rpx;
}


.group-list{
  margin-left: 5pt;
  margin-right: 5pt;
  margin-top: 5pt;
  margin-bottom: 0pt;
  border-radius: 3px;
  background: rgb(255, 255, 255);
}

.layout_horizontal{
  height: auto;
  display: flex; /* flex布局 */
  flex-direction: row; /* row 横向 */
  justify-content: flex-start; /* 设置弹性盒子元素在主轴（横轴）的对齐方式*/
  align-items: center;
}

.activity-type-image{
  margin-top: 10pt;
  margin-bottom: 10pt;
  margin-left: 10pt;
  /* width: 80rpx;
  height: 80rpx; */
  width: 24pt;
  height: 24pt;
  border-radius: 3px;
  /* background:  rgb(0, 255, 255); */
}




.main-label{
  font-size: 10pt;
  font-family: "Times New Roman", Times, serif;
  margin-left: 5pt;
  margin-right: 5pt;
  margin-top: 15pt;
  margin-bottom: 15pt;
  
  /* padding-top: 15pt; //padding是内边距；margin是外边距
  padding-bottom: 15pt; */

  display: -webkit-box;   
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;      
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  /* background:  rgb(0, 255, 255); */
}

.chevron-image{
  margin-right: 10pt;
  width: 12pt;
  height: 12pt;
  vertical-align: middle;
  margin-left: auto;   /* 使chevron-image右对其 */
  /* background:  rgb(0, 255, 255); */
}

.sub-label{
  font-size: 8pt;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding-top: 5rpx;
  padding-bottom: 15rpx;
  display: -webkit-box;   
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;      
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}




