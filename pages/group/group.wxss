/* pages/group/group.wxss */
/*横向布局  */
.layout_horizontal{
  height: auto;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.divLine{
 background: #EEEDEE;
 width: 100%;
 height: 10rpx;
}
.new_post{
  float: right;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  /*border-radius: 500px;*/
  width: 100rpx;
  height: 100rpx;
}

.post_list{
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 14rpx;
  margin-bottom: 12rpx;
}
.activity_title{
  font-size: 12pt;
  display: -webkit-box;   
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;      
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.extra_info{
  display: block;
  font-size: 10pt;
  width: 650rpx;
  color:midnightblue;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.location{
  width: 580rpx;
  padding-right: 30rpx;
}

.all_user_list{
  margin-bottom: 102rpx;
}

.user_item{
  padding-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.user_item_head{
  display: flex;
  flex-direction: row;
}

.text_area {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.author_name{
  font-size: 14pt;
}
.comment_author_name{
  font-size: 12pt;
}

.publish_time{
  font-size: 8pt;
  color: gray;
  margin-top: 1rpx;
}

.divLine{
 background: #EEEDEE;
 width: 100%;
 height: 10rpx;
}

.title_area{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar{
  width: 80rpx;
  height: 80rpx;
}