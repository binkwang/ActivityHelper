
<block wx:if='{{groupDetailLoaded && activitiesLoaded && usersLoaded}}' wx:for="{{activities}}">
    <view class="divLine"></view>
    <!--block不能设置css-->
    <view class='post_list' bindtap='onItemClick' data-activityid='{{item._id}}'>
        <!--activityid 传给js文件-->
        <view>
            <text class='activity_title'>{{item.activity_title}}</text>
        </view>
        <view class="layout_horizontal">
            <view>
                <text class='extra_info location'>地点：{{item.location}}</text>
            </view>

            <!-- TODO: 已报名人数/总人数限制 -->
            <view>
                <text class='extra_info number_limit'>{{item.number_limit}}人</text>
            </view>
        </view>
        <view>
            <text class='extra_info start_time'>开始时间：{{item.start_time}}</text>
        </view>
        <view>
            <text class='extra_info start_time'>结束时间：{{item.end_time}}</text>
        </view>
    </view>
</block>

<view class="divLine"></view>

<view>
<text class='author_name comment_author_name'>群成员列表</text>
</view>

<block wx:for="{{users}}">
    <view class="divLine"></view>
    <view class='all_user_list'>
        <view class='title_area'>
          <view class='avatar_area'>
              <image class='avatar' src='{{item.avatar_url}}'/>
          </view>
          <view class='text_area'>
              <view>
                  <text class='author_name'>{{item.nick_name}}</text>
              </view>
              <view class='publish_time'>
                  <text class='publish_time'>{{item.join_time}}</text>
              </view>
          </view>
        </view>
    </view>
</block>

<image class="new_post" bindtap="newPost" src='../../images/newPost.png'></image>


