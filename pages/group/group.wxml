<block wx:for="{{activities}}">
    <view class="divLine"></view>
    <!--block不能设置css-->
    <view class='post_list' bindtap='onItemClick' data-activityid='{{item._id}}'>
        <!--activityid 传给js文件-->
        <view>
            <text class='activity_title'>{{item.activity_title}}</text>
        </view>
        <view class="layout_horizontal">
            <view>
                <text class='extra_info location'>地点：{{item.location}}</text>
            </view>

            <!-- TODO: 已报名人数/总人数限制 -->
            <view>
                <text class='extra_info number_limit'>{{item.number_limit}}人</text>
            </view>
        </view>
        <view>
            <text class='extra_info start_time'>开始时间：{{item.start_time}}</text>
        </view>
        <view>
            <text class='extra_info start_time'>结束时间：{{item.end_time}}</text>
        </view>
    </view>
</block>

<image class="new_post" bindtap="newPost" src='../../images/newPost.png'></image>